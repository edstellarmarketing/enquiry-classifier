  "proposal_unlock_requirements": {
    "threshold_percentage": 60,
    "mandatory_fields": [
      "contact_name",
      "contact_email",
      "company_name",
      "training_domain",
      "num_participants",
      "delivery_mode",
      "preferred_timeline",
      "decision_maker_name"
    ],
    "conditional_requirements": [
      {
        "condition": "delivery_mode == 'VILT'",
        "additional_required_fields": [
          "participant_timezone",
          "platform_preference"
        ]
      },
      {
        "condition": "training_category == 'technical'",
        "additional_required_fields": [
          "sandbox_required"
        ]
      },
      {
        "condition": "num_participants > 50",
        "warnings": [
          "Large group - consider batch training approach"
        ]
      }
    ],
    "quality_recommendations": {
      "high_quality_threshold": 80,
      "recommended_fields": [
        "budget_range",
        "business_pain_points",
        "learning_objectives",
        "success_metrics",
        "participant_skill_level"
      ],
      "message": "Add these optional fields to improve proposal quality"
    }
  },
  "scoring_calculation_rules": {
    "default_calculation": "sum_of_filled_fields",
    "partial_credit": {
      "enabled": true,
      "rules": [
        {
          "field": "budget_range",
          "partial_conditions": [
            {
              "condition": "contains_approximate_value",
              "credit_percentage": 70,
              "examples": ["around 5L", "~5 Lakhs"]
            },
            {
              "condition": "contains_range",
              "credit_percentage": 100,
              "examples": ["3-4 Lakhs", "â‚¹3L-â‚¹5L"]
            }
          ]
        },
        {
          "field": "num_participants",
          "partial_conditions": [
            {
              "condition": "exact_number",
              "credit_percentage": 100
            },
            {
              "condition": "approximate",
              "credit_percentage": 80,
              "examples": ["~30", "about 25"]
            },
            {
              "condition": "range",
              "credit_percentage": 90,
              "examples": ["25-30", "between 20-25"]
            }
          ]
        }
      ]
    },
    "bonus_points": {
      "enabled": true,
      "rules": [
        {
          "condition": "technical_requirements_documented_for_technical_training",
          "bonus_points": 2,
          "description": "Bonus for documenting technical setup needs"
        },
        {
          "condition": "multiple_pain_points_documented",
          "bonus_points": 1,
          "description": "Bonus for detailed pain point analysis"
        }
      ]
    }
  },
  "validation_rules": {
    "minimum_for_save": 10,
    "warn_if_below": 30,
    "recommend_discovery_call_if_below": 40,
    "auto_save_enabled": true,
    "auto_save_interval_seconds": 30
  }
